<idea-plugin>
    <id>org.brex.plugins.codeowners</id>
    <name>CodeOwners</name>
    <vendor>Brex</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.brex.plugins.codeowners.services.MyApplicationService"/>
        <projectService serviceImplementation="org.brex.plugins.codeowners.services.MyProjectService"/>
        <statusBarWidgetFactory implementation="org.brex.plugins.codeowners.widget.CodeOwnersWidgetFactory"/>
    </extensions>

    <applicationListeners>
        <listener class="org.brex.plugins.codeowners.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>

        <listener class="org.brex.plugins.codeowners.widget.CodeOwnersWidget"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>

    </applicationListeners>
</idea-plugin>
