<idea-plugin>
    <id>org.brex.plugins.codeowners</id>
    <name>Template</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.brex.plugins.codeowners.services.MyApplicationService"/>
        <projectService serviceImplementation="org.brex.plugins.codeowners.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="org.brex.plugins.codeowners.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
